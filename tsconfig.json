{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",

    /* Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    /* Module Resolution Options */
    "esModuleInterop": true,

    /** Advance Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "typedocOptions": {
    "inputFiles": ["./src"],
    "mode": "modules",
    "out": "docs",
    "name": "Jupiter Simulator Helpers",
    "includeVersion": true,
    "excludeNotExported": true,
    "exclude": ["node_modules/**/*.ts"]
  }
}
